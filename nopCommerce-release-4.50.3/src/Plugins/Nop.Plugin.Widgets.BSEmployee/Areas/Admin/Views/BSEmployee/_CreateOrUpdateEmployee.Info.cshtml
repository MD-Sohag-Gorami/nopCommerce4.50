@model EmployeeModel
<div class="card-body">

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="EmployeeName" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmployeeName" asp-required="true" />
            <span asp-validation-for="EmployeeName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="EmployeeBsId" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmployeeBsId" />
            <span asp-validation-for="EmployeeBsId"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="EmployeeAge" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmployeeAge" />
            <span asp-validation-for="EmployeeAge"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DesignationId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="DesignationId" asp-items="Model.AvailableDesignation" />
            <span asp-validation-for="DesignationId"></span>
        </div>
    </div>

</div>