
@model EmployeeModel
@{
    const string hideInfoBlockAttributeName = "BSEmployeeListPage.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);
 
}

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">

             <nop-cards id="employee-cards">
                <nop-card asp-name="employee-info" asp-icon="fas fa-info" asp-title="@T("Plugins.Widgets.Employee.Admin.Employees.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Widgets.BSEmployee/Areas/Admin/Views/BSEmployee/_CreateOrUpdateEmployee.Info.cshtml", Model)</nop-card>

            </nop-cards>
        </div>
    </div>
</section>
